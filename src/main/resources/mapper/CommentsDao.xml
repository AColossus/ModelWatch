<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.CommentsDao">

    <resultMap id="reply" type="Reply">
        <id property="repId" column="rep_id"></id>
        <result property="repContent" column="rep_content"></result>
        <result property="repLikeNum" column="rep_like_num"></result>
        <result property="repDisLikeNum" column="rep_dislike_num"></result>
        <result property="repCreateTime" column="rep_create_time"></result>
        <result property="repState" column="rep_state"></result>
        <result property="repRId" column="rep_r_id"></result>
        <result property="repState" column="rep_state"></result>

        <collection property="user" resultMap="dao.UserDao.userInReply"></collection>

    </resultMap>
    <resultMap id="comment" type="Comment">
        <id property="comId" column="com_id"></id>
        <result property="comContent" column="com_content"></result>
        <result property="comLikeNum" column="com_like_num"></result>
        <result property="comDisLikeNum" column="com_dislike_num"></result>
        <result property="comCreateTime" column="com_create_time"></result>
        <result property="comMId" column="com_mid"></result>
        <result property="comUId" column="com_uid"></result>
        <result property="comState" column="com_state"></result>

        <collection property="user" resultMap="dao.UserDao.user"></collection>
        <collection property="replys"
                    column="{comId = com_id}"
                    select="SelectReplysByComId"
                    javaType="java.util.ArrayList"
                    >
        </collection>
    </resultMap>

    <select id="SelectComments" resultType="Comment">
        select com_Id,com_content,com_create_time,com_state,
        u_username "user.uUsername"
        from comments c, user u
        WHERE c.com_uId = u.u_id
        and com_state = #{state}
    </select>

    <select id="SelectReplysByComId" resultMap="reply">
        select  rep_id, rep_content, rep_like_num, rep_dislike_num, rep_create_time,
                rep_r_id, rep_u_id,
                U_id r_u_id, U_avater r_u_avater, U_username r_u_username
              from reply,user
              where U_id=rep_u_id
              and rep_com_id = #{comId}
              and rep_state = 1
              order by rep_create_time
    </select>

    <select id="SelectCommentsByMIdPage" resultMap="comment">
        SELECT com_id,com_content,com_create_time,com_like_num,com_dislike_num,
               U_id,u.U_avater,u.U_username
        FROM user u,comments
        where com_mid =#{mId} and com_uid= u.U_id and com_state = 1
        order by com_create_time desc
    </select>

    <update id="UpdateCommentState">
        UPDATE comments SET com_state=#{comState} where com_id=#{comId}
    </update>

    <update id="UpdateCommentPositiveNum">
        UPDATE comments SET com_like_num=com_like_num+1 where com_id=#{comId}
    </update>

    <update id="UpdateCommentObjectiveNum">
        UPDATE comments SET com_dislike_num=com_dislike_num+1 where com_id=#{comId}
    </update>

    <insert id="AddComment">
        insert into comments (com_mid, com_content,com_uid) VALUES(#{comMId}, #{comContent}, #{comUId})
    </insert>

    <delete id="DeleteComment">
        delete from comments
         where com_id = #{comId}
    </delete>
</mapper>